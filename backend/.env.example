# API Gateway Pro - Environment Configuration Example
# Copy this file to .env and update with your actual values

# Project Information
PROJECT_NAME=API Gateway Pro
VERSION=1.0.0
API_V1_STR=/api/admin

# Database Configuration
# SQLite database URL (default for development)
DATABASE_URL=sqlite+aiosqlite:///./api_gateway.db

# Security Settings
# IMPORTANT: Change this secret key in production!
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Authentication
# Set to true to enable authentication for admin endpoints
ENABLE_AUTH=false

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Logging Configuration
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30

# Proxy Default Settings
DEFAULT_REQUEST_TIMEOUT=30
DEFAULT_RETRY_COUNT=1
DEFAULT_CONNECTION_POOL_SIZE=10

# Script Execution Settings
MAX_SCRIPT_TIMEOUT_MS=1000
ENABLE_PYTHON_SCRIPTS=false
